{
  "id": null,
  "title": "VM Monitoring Dashboard",
  "tags": [ "monitoring", "vm", "docker" ],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "System Overview",
      "type": "stat",
      "targets": [
        {
          "expr": "up",
          "legendFormat": "Services Up"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "title": "CPU Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU Usage %"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "id": 3,
      "title": "Memory Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "Memory Usage %"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "id": 4,
      "title": "Disk Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "100 - ((node_filesystem_avail_bytes * 100) / node_filesystem_size_bytes)",
          "legendFormat": "Disk Usage %"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    },
    {
      "id": 5,
      "title": "Container Count",
      "type": "stat",
      "targets": [
        {
          "expr": "count(container_start_time_seconds)",
          "legendFormat": "Running Containers"
        }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 16 }
    },
    {
      "id": 6,
      "title": "Docker Containers",
      "type": "table",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name!=\"\"}",
          "format": "table",
          "instant": true
        }
      ],
      "gridPos": { "h": 8, "w": 18, "x": 6, "y": 16 }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s"
}
